<div class="container">
<div class="row">
    <div class="col-lg-8 mb-4">
        <h3 class="my-3">商品登録</h3>
        <%= form_with(model: @product, local: true,multipart: true) do |form| %>
        <div class="control-group form-group">
            <div class="controls">
                <label>名前:</label>
                <%= form.text_field :name , placeholder: "名前" ,class: "form-control" %>
                <p class="help-block"></p>
            </div>
        </div>
        <div class="control-group form-group">
            <div class="controls">
                <label>写真のURL:</label>
                <%= file_field 'upload', 'datafile' %></p>

            </div>
        </div>
        <div class="control-group form-group">
            <div class="controls">
                <label>カテゴリ:</label>
                <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
            </div>
        </div>
        <div class="control-group form-group">
            <div class="controls">
                <label>商品の説明:</label>
                <%= form.text_area :description , placeholder: "商品の説明" ,class: "form-control" %>
            </div>
        </div>
        <div id="success"></div>
        <!-- For success/fail messages -->
        <%= form.submit "投稿" ,class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
</div>