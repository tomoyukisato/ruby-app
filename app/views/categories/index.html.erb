<div class="container my-5">
<h2 class="my-4 bd-highlight">カテゴリ管理</h2>
    <div class="row">
        <div class="col-md-3 card">
            <%= form_with( model: @category, local: true )  do |f| %>
            <%= f.label :name, 'カテゴリー名' ,class: "my-2" %>
            <%= f.text_field :name, class:'form-control my-2' %>
            <%= f.submit '追加', :name => nil , class: 'btn btn-primary btn-block' %>
            <% end %>
        </div>
        <div class="col-md-9">
            <table class="table">
                <thead>
                    <tr>
                        <th> カテゴリー名 </th>
                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody> <% @categories.each do |category| %>
                    <tr>
                        <td> <%= category.name %> </td>
                        <td> <%= link_to '編集', edit_category_path(category), class: 'btn-sm btn-primary' %> </td>
                        <td> <%= link_to '削除', category_path(category), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-sm btn-danger' %>
                        </td>
                    </tr><% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>